<!DOCTYPE html>
<html>

<head>
  <title>User List</title>
  <link rel="stylesheet" type="text/css" href="/style.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 50px;
      padding: 0;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th,
    td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ddd;

    }

    th {
      background-color: #333;
      color: #fff;
    }

    tr:hover {
      background-color: #f5f5f5;
    }

    a {
      text-decoration: none;
      color: #333;
    }

    a:hover {
      color: #555;
    }

    #edit {
      background-color: blue;
      border: none;
      width: 60px;
      height: 30px;
    }

    #delete {
      background-color: red;
      border: none;
      width: 60px;
      height: 30px;

    }

    .edi {
      color: #fff;
    }

    .dele {
      color: #fff;
    }

    .add-button {
      display: block;
      text-align: center;
      margin-top: 20px;
      background-color: rgb(16, 16, 20);
    }

    #add {
      color: #fff;
      width: 150px;
      height: 30px;
      text-align: center;
      padding-top: 10px;
      margin-left: 600px;
    }
  </style>
</head>

<body>

  <h1>Person Details</h1>
  <table>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Education</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    <% users.forEach(user=> { %>
      <tr>
        <td>
          <%= user.fname %>
        <td>
          <%= user.lname %>
        </td>
        <td>
          <%= user.age %>
        </td>
        <td>
          <%= user.gender %>
        </td>
        <td>
          <%= user.education %>
        </td>
        <td>
          <%= user.phoneNumber %>
        </td>
        <td>
          <%= user.email %>
        </td>

        <td><button id="edit"><a class="edi" href="/user/<%= user.id %>">Edit</a></button></td>
        <td><button id="delete"><a class="dele" href="/user/delete/<%= user.id %>">Delete</a></button></td>
      </tr>
      <% }); %>
      
  </table>
  <a class="add-button" id="add" href="/user-form">Add New User</a>

  

<script>
  
</script>
</body>

</html>